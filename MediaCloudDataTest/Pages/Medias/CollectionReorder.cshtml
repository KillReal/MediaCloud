@page
@model MediaCloud.Pages.Medias.CollectionReorderModel

@{
    ViewData["Title"] = "MediaCollectionReorder";
}

<div class = "page rounded-3 p-3 text-white">
    <h1>Collection reorder</h1>

    <div class="button-panel d-flex flex-row align-items-center">
           <div>
                <a href="@(Model.ReturnUrl)" class="btn btn-info mt-4">Back to Details</a>
            </div>
        </div> 

    <hr />
    <form enctype="multipart/form-data" method="post">
        <input type="hidden" asp-for=@(Model.ReturnUrl) class="form-control"></input>
        <input type="hidden" asp-for=@(Model.PreviewId) class="form-control"></input>
        <div class="row"> 
            @for(int i = 0; i < Model.Medias.Count; i++)
                {
                    <div class="card-body d-flex shadow-1-strong col-md-4">
                            <div class="card p-3 d-flex flex-column align-items-center justify-content-between" style="border-radius: 0.75rem">
                                <img class="w-100 shadow-1-strong" style="border-radius: 0.5rem"
                                src="data:image/png;base64,@Convert.ToBase64String(Model.Medias[i].Content)"/>
                                <div>
                                    <label class="col-form-label text-black">Order:</label>
                                    <input asp-for=@(Model.Medias[i].Rank) class="form-control"></input>
                                </div>
                            </div>
                    </div> 
                }
        </div>
        <input type="submit" value="Reorder" class="btn btn-success" />
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
