@page
@model MediaCloud.Pages.Medias.CollectionModel

@{
    ViewData["Title"] = "MediaCollectionr";
}

<div class = "page rounded-3 p-3 text-white">
    <h1>Collection gallery</h1>

    <div class="button-panel d-flex flex-row align-items-center">
           <div>
                <a href="@(Model.ReturnUrl)" class="btn btn-info mt-4">Back to Gallery</a>
            </div>
        </div> 

    <hr />
    <div class="row"> 
        @for(int i = 0; i < Model.Medias.Count; i++)
            {
                <div class="card-body picture shadow-1-strong col-md-4"
                     onclick="window.location='/Medias/Detail?id=@(Model.Medias[i].Id)&returnUrl=/Medias/Collection?id=@(Model.PreviewId)'">
                        <img class="w-100 shadow-1-strong" style="border-radius: 0.5rem"
                            src="data:image/png;base64,@Convert.ToBase64String(Model.Medias[i].Content)"/>
                </div> 
            }
    </div>

    <a class="btn btn-info btn-rounded me-1 ms-2 mb-2" asp-page="/Medias/CollectionReorder" asp-route-id=@Model.PreviewId asp-route-returnUrl="/Medias/Collection?id=@Model.PreviewId")>Reorder</a>

    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
