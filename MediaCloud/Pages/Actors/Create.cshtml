@page
@model MediaCloud.Pages.Actors.ActorCreateModel
@using MediaCloud.Data.Types

@{
    ViewData["Title"] = "Actor create";
}

<div class="page-container">
	<h1>Actor create</h1>

	<div class="button-panel"> 
		<div>
			<a class="btn btn-info mt-3" asp-page="Index">Back to Tags</a>
		</div>
	</div>

	<hr />

	<div class="row">
		<div class="col-md-4 text-white">
			<form enctype="multipart/form-data" method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger"><
				</div>
				<div class="form-group mb-3">
					<label class="col-form-label">Enter name</label>
					<input asp-for="@Model.Actor.Name" class="form-control" />
				</div>
				<div class="form-group mb-3">
					<label class="col-form-label">Enter password</label>
					<textarea asp-for="@Model.Actor.PasswordHash" class="form-control">
					</textarea>
				</div>
				<div class="form-group mb-3 form-check">
					<input class="form-check-input" type="checkbox" asp-for=Actor.IsAdmin>
					<label class="form-check-label" asp-for=Actor.IsAdmin>
					It's a admin
					</label>
				</div>
				<div class="form-group mb-3 form-check">
					<input class="form-check-input" type="checkbox" asp-for=Actor.IsPublic>
					<label class="form-check-label" asp-for=Actor.IsPublic>
						It's a public
					</label>
				</div>
				<div class="form-group mb-3 form-check">
					<input class="form-check-input" type="checkbox" asp-for=Actor.IsActivated>
					<label class="form-check-label" asp-for=Actor.IsActivated>
						It's activated (leave unchecked if need invite activation)
					</label>
				</div>
				<div class="form-group mb-3">
					<label class="col-form-label">Enter invite code</label>
					<input asp-for="@Model.Actor.InviteCode" class="form-control">
				</div>
				<div class="form-group mb-3">
					<input type="submit" value="Create" class="btn btn-success" />
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
