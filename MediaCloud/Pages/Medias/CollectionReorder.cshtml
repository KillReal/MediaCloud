@page
@model MediaCloud.Pages.Medias.CollectionReorderModel

@{
    ViewData["Title"] = "Reorder";
}

<div class = "page rounded-3 p-3 text-white">
    <h1>Reorder</h1>

    <div class="button-panel d-flex flex-row align-items-center">
           <div>
                <a href="@(Model.ReturnUrl)" class="btn btn-info mt-4">Back to Details</a>
            </div>
        </div> 

    <hr />
    <form enctype="multipart/form-data" method="post">
        <input type="hidden" asp-for=@(Model.ReturnUrl) class="form-control"></input>
        <input type="hidden" asp-for=@(Model.Collection.Id) class="form-control"></input>
        <div class="row thumbnail-sortable" id="row"> 
            @for(int i = 0; i < Model.Collection.Previews.Count(); i++)
                {
                    <div class="picture-card shadow-1-strong col-md-2" draggable="true">
                            <div class="card list-clickable p-2 pb-4 d-flex flex-column align-items-center justify-content-between thumbnail" style="border-radius: 0.75rem">
                                <img class="w-100 shadow-1-strong" style="border-radius: 0.5rem"
                                src="data:image/png;base64,@Convert.ToBase64String(Model.Collection.Previews[i].Content)"/>
                                <input class="order-val visually-hidden" asp-for=@(Model.Collection.Previews[i].Order)  class="form-control"></input>
                            </div>
                    </div> 
                }
        </div>
        <input type="submit" value="Reorder" class="btn btn-success" />
    </form>
</div>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

<script src="~/js/jquery.sortable.js"></script>

<script type="text/javascript">
    $('.thumbnail-sortable').sortable({
        placeholderClass: 'col-md-2'
    }).bind('sortupdate', function(e, ui) {
        var row = document.getElementById('row');
        var place = 0;
        for (const child of row.children) {
            var order = child.getElementsByClassName("order-val visually-hidden");
            order[0].value = place;
            place++;
        }
    });

</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
