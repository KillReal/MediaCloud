@page
@model MediaCloud.WebApp.Pages.LoginModel
@{
    ViewData["Title"] = "Login page";
}

<section class="gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">
                <form enctype="multipart/form-data" method="post">
					<h2 class="fw-bold mb-4">
					Sign In 🖐
					</h2>

					@if(Model.Result.IsSuccess == false)
					{
						<div class="alert alert-danger mt-2" role="alert">
							@Model.Result.Message
						</div>
					}

					<div class="form-outline form-white mb-4 mt-5">
						<label class="col-form-label mb-1">Name</label>
						<input id="login" asp-for=@Model.AuthData.Name class="form-control form-control-lg" />
					</div>

					<div class="form-outline form-white mb-4">
						<label class="col-form-label mb-1" for="typePasswordX">Password</label>
						<input type="password" id="password" asp-for=@Model.AuthData.Password class="form-control form-control-lg" />
					</div>

					<p class="small mb-5 pb-lg-2" hidden>
						<a href="#!">
							Forgot password? (Not implemented yet)
						</a>
					</p>

					<div class="d-flex justify-content-center align-items-center flex-column">
							<div class="spinner-border text-primary mt-2" role="status" id="loadingSpinner" style="visibility: hidden"></div>
							<input class="btn btn-success btn-lg px-5 mt-4" type="submit" value="Enter" onclick="startSpinner();">
					</div>
              	</form>
            </div>

            <div>
              	<p class="mb-0">
					Have an invite code? 
					<a href="/Account/Joinin" class="fw-bold">
						Join In
					</a>
              	</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script type="text/javascript">  
    function startSpinner() {
        document.getElementById("loadingSpinner").style.visibility = "visible";
    }
</script>